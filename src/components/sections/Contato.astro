---
import Button from "../shared/Button.astro";
import Paragraph from "../shared/Paragraph.astro";
---


    <section style="gap:10px; justify-content:center; align-items:center; flex-direction: column; display:flex;" class="">
        <Paragraph className="mt-5 text-xl max-sm:w-64 max-sm:text-sm">
            Digite seu nome:
        </Paragraph>
        <form action="#" method="post" class="text-xl py-1 pl-6 w-96 pr-1 flex gap-3 items-center text-heading-3 shadow-lg shadow-box-shadow
        border border-box-border bg-box-bg rounded-full ease-linear focus-within:bg-body focus-within:border-primary max-sm:w-64 max-sm:text-sm">
            <label for="nome">Nome:</label>
            <input type="text" name="nome" id="nome" placeholder="Nome completo" class="w-full py-3 outline-none bg-transparent">
        </form>
        <Paragraph className="mt-5 text-xl max-sm:w-64 max-sm:text-sm">
            Informe seu WhatsApp:
        </Paragraph>
        <form action="#" method="post" class="text-xl py-1 pl-6 w-96 pr-1 flex gap-3 items-center text-heading-3 shadow-lg shadow-box-shadow
        border border-box-border bg-box-bg rounded-full ease-linear focus-within:bg-body focus-within:border-primary max-sm:w-64 max-sm:text-sm">
            <label for="telefone">Número:</label>
            <input type="text" name="telefone" id="telefone" placeholder="(XX) X XXXX-XXXX" class="w-full py-3 outline-none bg-transparent" pattern="\([0-9]{2}\) [0-9] [0-9]{4}-[0-9]{4}" title="(XX) X XXXX-XXXX">
        </form>
        <Paragraph className="mt-5 text-xl max-sm:w-64 max-sm:text-sm">
            Selecione o produto de interesse:
        </Paragraph>
        <form action="#" method="post" class="text-xl py-1 pl-6 pr-1 flex gap-3 items-center text-heading-3 shadow-lg shadow-box-shadow
    border border-box-border bg-box-bg rounded-full ease-linear focus-within:bg-body focus-within:border-primary max-sm:w-64 max-sm:text-sm">
    <label for="opcao">Produtos:</label>
            <select id="opcao" name="opcao" class="w-full py-3 outline-none bg-transparent">
                    <option value="SP">ChatBot</option>
                    <option value="RJ">CRM Analytics</option>
                    <option value="PB">Integrador</option>
                    <option value="PB">Portal de cobranças</option>
                    <option value="PB">Orquestrador</option>
                    <option value="PB">Remarketing</option>
                    <option value="PB">Funil de recuperação</option>
                    <option value="PB">Dashboard de recuperação</option>
                    <option value="PB">Analytics</option>
            </select>
    </form>
    <form class="mt-5 mb-10">
        <Button variant={"primary"} className={"min-w-max text-white"}>
            <span class="hidden sm:flex relative z-[5]">
            Enviar
            </span>
            <span class="flex sm:hidden relative z-[5]">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5" />
                </svg>
            </span>
        </Button>
    </form>
    </section>



<script>
    document.getElementById('telefone').addEventListener('input', function (e) {
    var input = e.target as HTMLInputElement;

    var x = input.value.replace(/\D/g, '').match(/(\d{0,2})(\d{0,1})(\d{0,4})(\d{0,4})/);
    input.value = !x[2] ? x[1] : '(' + x[1] + ') ' + x[2] + (x[3] ? ' ' + x[3] : '') + (x[4] ? '-' + x[4] : '');
    });
</script>